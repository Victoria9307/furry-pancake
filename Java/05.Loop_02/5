package selfStudy;

import java.util.Scanner;

public class Loop_02_05 {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);

		System.out.println("Number please : ");
		int c = scan.nextInt();

		for (int i= 0; i <= c; i++) {
			for (int j= 0 ; j < i; j++) {
				System.out.print(" ");
			}
			for (int j= 0; j < c-i; j++) {
				System.out.print("*");
			}
			for (int x= 0; x < (c-i)-1; x++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}
